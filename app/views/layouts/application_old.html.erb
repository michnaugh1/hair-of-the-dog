<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title><%= @pagetitle || (@page && @page.title) || 'Hair of the Dog Grooming' %></title>
<%= stylesheet_link_tag 'hairofthedog1' %>
<%= javascript_include_tag :defaults %> 
</head>
<body>
	<div id='pagewrapper'>
		<div id='header'>
<%= flashobject_tag "/swf/banner.swf", :size => "800x304" %> 
		</div>
		<div id='navbar'>
			<ul>
		
			<% @tabs.each do |page| -%>
				<li><%= link_to page.title, view_page_path(page.name) %></li>
			<% end -%>
			<li><a href="#" class="parent">Links &nbsp &nbsp</a>
				<ul>
				<li><a href="http://www.grooming.net">Grooming.net</a></li>
				<li><a href="http://www.petfinder.com">Pet Finder</a></li>
				<li><a href="http://www.aspca.org">ASPCA</a></li>
				<li><a href="http://www.nationaldoggroomers.con">National Dog Groomers Assoc.</a></li>
				</ul>
			</li>
			<li><%= mail_to "meaghan@hairofthedoggrooming.biz", "Email" %></li>
			<li><% if logged_in? %>
					<%= link_to "Log Out", logout_path %>
				<% else %>
					<%= link_to "Log In", login_path %>
				<% end %>
				</li>
			</ul>
		<div>
	</div>
	<div id='content'>
		<h2><%= flash[:notice] %></h2>
 		<%= yield %>
	</div>
	
	<div id='footer'>
		<p>Copyright Â© 2008 Hair of the Dog Grooming., All rights reserved.</p>
	</div>
</body>
</html>